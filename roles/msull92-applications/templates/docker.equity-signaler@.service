[Unit]
Description=Equity Signaler #%i
After=docker.equity-signaler-redis.service docker.kafka.service
Requires=docker.equity-signaler-redis.service docker.kafka.service

[Service]
TimeoutStartSec=0
Restart=always
ExecStartPre=-/usr/bin/docker kill equity_signaler_%i
ExecStartPre=-/usr/bin/docker rm equity_signaler_%i
ExecStartPre=/usr/bin/docker pull msull92/equity-signaler
ExecStart=/usr/bin/docker run -m 100m --cpus=".5" --env-file /srv/equity-signaler/.env --network internal --name equity_signaler_%i msull92/equity-signaler

[Install]
WantedBy=multi-user.target
