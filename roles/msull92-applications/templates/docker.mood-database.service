[Unit]
Description=Mood Database
After=docker.service
Requires=docker.service

[Service]
TimeoutStartSec=0
Restart=always
ExecStartPre=-/usr/bin/docker kill mood_database
ExecStartPre=-/usr/bin/docker rm mood_database
ExecStartPre=/usr/bin/docker pull postgres:9.6
ExecStart=/usr/bin/docker run -m 100m --cpus=".25" --env-file /srv/mood-database/.env -v /data/mood-database:/var/lib/postgresql/data --network internal --name mood_database postgres:9.6

[Install]
WantedBy=multi-user.target
